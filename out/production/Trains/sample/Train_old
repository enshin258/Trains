package sample;

import javafx.scene.shape.Rectangle;
import javafx.scene.paint.Color;

public class Train extends Thread {

    public int ID;
    Color color;
    int pos_x;
    int pos_y;
    Rectangle locomotive;
    Background background;


    @Override
    public void run()
    {
       // background.getGridpane().add(locomotive,pos_x,pos_y);

    }

    public Train(int id, Color color,Background background,int pos_x,int pos_y) {
        locomotive = new Rectangle(100, 50);
        locomotive.setFill(color);
        locomotive.setStroke(Color.BLACK);
        locomotive.setOnMouseClicked(event -> {
            System.out.println("Jestem pociag numer: " + getID());
        });
        this.ID = id;
        this.color = color;
        this.background=background;
        this.pos_x=pos_x;
        this.pos_y=pos_y;
    }

    public int getID() {
        return ID;
    }

    public void setId(int id) {
        this.ID = id;
    }

    public int getPos_x() {
        return pos_x;
    }

    public void setPos_x(int pos_x) {
        this.pos_x = pos_x;
    }

    public int getPos_y() {
        return pos_y;
    }

    public void setPos_y(int pos_y) {
        this.pos_y = pos_y;
    }
}


