package Projekt;

import javafx.application.Application;
import javafx.fxml.FXMLLoader;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.paint.Color;
import javafx.stage.Stage;

import javax.xml.crypto.dsig.Transform;
import java.awt.*;


//plansza 11 na 17 kratek


public class Main extends Application {

    private Stage stage;
    private Scene scene;

    @Override
    public void start(Stage primaryStage) throws Exception {

        stage=primaryStage;
        stage.setTitle("Projekt-POCIAGI");

        Background background = new Background(11,17);

        //creating trains as threads
        Train t1 = new Train(1,Color.BLUE,background,1,0);
        Train t2 = new Train(2,Color.YELLOW,background,1,16);
        Train t3 = new Train(3,Color.GREEN,background,9,16);



        scene = new Scene(background.getGridpane());
        stage.setScene(scene);

        t1.run();
        t2.run();
        t3.run();

        stage.show();

    }

    public static void main(String[] args) {
        launch(args);
    }

}
